<h1>Welcome to my coding books review App!</h1> 

<%= form_for @user do |f| %>
    <%= render partial: "layouts/errors", locals: {record: @user} %>

    <%= f.label :username %><br>
    <%= f.text_field :username %> <br>

    <%= f.label :email %><br>
    <%= f.text_field :email %><br>

    <%= f.label :password %><br>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %><br>

    <%= f.submit  "Sign Up!"%>
<% end %>